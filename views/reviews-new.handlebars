<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/reviews/new/review" method="post">
      <legend>New Review</legend>
      <div class="form-group">
        <label for="review-title">Title</label>
        <input type="text" name="name" class="form-control" id="name" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="review-url">Url</label>
        <input type="url" name="url" class="form-control" id="url" placeholder="https://www.google.com">
      </div>
      <div class="form-group">
        <label for="review-summary">Summary</label>
        <textarea name="summary" class="form-control" id="summary" placeholder="Title"></textarea>
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Create Review</button>
      </div>
    </form>
  </div>
</div>